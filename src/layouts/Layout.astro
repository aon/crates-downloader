---
import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description="A simple website to download Rust crates from crates.io"
      charset="UTF-8"
      openGraph={{
        basic: {
          type: "website",
          title: "Crates Downloader - a simple website to download Rust crates",
          image: "https://cratesdownloader.xyz/og.png",
          url: "https://cratesdownloader.xyz",
        },
        optional: {
          description:
            "A simple website to download Rust crates from crates.io",
        },
        image: {
          alt: "Crates Downloader logo, a crab emoji",
        },
      }}
      twitter={{
        creator: "@agustin_aon",
        title: "Crates Downloader",
        description: "A simple website to download Rust crates from crates.io",
        image: "https://cratesdownloader.xyz/og.png",
        imageAlt: "Crates Downloader logo, a crab emoji",
        card: "summary",
      }}
      extend={{
        meta: [{ name: "viewport", content: "width=device-width" }],
        link: [
          { rel: "icon", type: "image/svg+xml", href: "/favicon.ico" },
          { rel: "stylesheet", href: "/css/pico.min.css" },
        ],
      }}
    />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8VJ54ZC76W"
    ></script>
    <script>
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];

      function gtag() {
        // @ts-ignore
        dataLayer.push(arguments);
      }
      // @ts-ignore
      gtag("js", new Date());

      // @ts-ignore
      gtag("config", "G-8VJ54ZC76W");
    </script>

    <!-- <script
      defer
      data-domain="cratesdownloader.xyz"
      src="https://plausible.io/js/script.js"
    ></script> -->
  </head>
  <body>
    <slot />
    <footer class="container">
      <hr />
      <small>
        Built by <a href="https://github.com/aon">aon</a> â€¢ <a
          href="https://github.com/aon/crates-downloader">Source code</a
        >
      </small>
    </footer>

    <style>
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
    </style>
    <style is:global>
      h1 a:link {
        text-decoration: none;
      }
    </style>
  </body>
</html>
